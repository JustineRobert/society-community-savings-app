            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"count\": 3,\n  \"names\": [\"Alpha Group\", \"Beta Group\", \"Gamma Group\"]\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/api/groups/seed",
          "host": ["{{baseUrl}}"],
          "path": ["api","groups","seed"]
        }
      },
      "response": []
    },
    {
      "name": "Create Group",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"My Test Group\",\n  \"description\": \"Quick test group\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/api/groups",
          "host": ["{{baseUrl}}"],
          "path": ["api","groups"]
        }
      },
      "response": []
    },
    {
      "name": "Join Group",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": { "mode": "raw", "raw": "{}", "options": { "raw": { "language": "json" } } },
        "url": {
          "raw": "{{baseUrl}}/api/groups/join/{{groupId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","groups","join","{{groupId}}"]
        }
      },
      "response": []
    }
  ],
  "event": [
