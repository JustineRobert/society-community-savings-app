{
  "name": "community-savings-backend",
  "version": "1.0.0",
  "description": "Backend for Community Savings App by TITech Africa",
  "main": "server.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 app.js",
    "dev": "nodemon --exec \"node --max-old-space-size=4096\" server.js",
    "seed-admin": "node scripts/seed-admin.js",
    "migrate": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:list": "node scripts/migrate.js list",
    "migrate:verify": "node scripts/migrate.js verify",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:ci": "jest --ci --coverage --detectOpenHandles"
  },
  "author": "Igune Justine Robert, TITech Africa",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cookie-signature": "^1.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.21.0",
    "mongoose": "^8.20.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "sparse-bitfield": "^3.0.3",
    "uuid": "^13.0.0",
    "validator": "^13.11.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-html-reporters": "^3.10.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
